<h3><%= @conversation.listing.title %></h3>
<p>Conversation with: <%= @conversation.host_id == current_user.id ? 
@conversation.name(@conversation.guest_id) : @conversation.name(@conversation.host_id)%></p>

<% @conversation.messages.each_with_index do |message, index| %>
  <div class="<%= message.user_id == current_user.id ? 'bg-warning' : 'bg-primary text-white' %>">
    <p><strong><%= @conversation.name(message.user_id) %></strong> |
    <em><%= message.created_at %></em></p>
    <p><%= message.body %></p>
  </div>
<% end %>

<%= render 'messages/form', message: @message %>
