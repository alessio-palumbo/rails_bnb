<h5>New message to <%= @host.profile.username %></h5>

<%= form_for @message do |f| %>
  <%= hidden_field_tag 'host_id', @host.id %>
  <%= f.text_area :body, class: 'message block' %>
  <br>
  <%= f.submit 'Send', class: 'btn btn-sm btn-danger' %>
  <%= link_to 'Back', :back, class: 'btn btn-sm btn-dark' %>
<% end %>