<h1>Support</h1>

<p>Please message our support team here:</p>

<%= form_with(url: support_url, local: true) do |f| %>
  <% unless @error_messages.empty? %>
    <% @error_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>
  
  <div>
    <p><%= f.label :email %></p>
    <%= f.email_field :email %>
  </div>

  <div>
    <p><%= f.label :message %></p>
    <%= f.text_area :message, rows: 6 %>
  </div>

  <%= f.button 'Send', class: 'btn btn-primary' %>
<% end %>