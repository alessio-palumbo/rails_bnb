<div class="row">
  <div class="col-md-8">
  <% @listings.each do |listing| %>
    <div class="figure">
      <% if listing.image %>
        <p><%= image_tag listing.image_url %>
      <% end %>
      <h4><%= link_to listing.title, listing %></h4>
      <p><strong><%= listing.description %></strong></p>
      <p><em><%= listing.full_address %></em></p>
      <p>Beds: <%= listing.bed_count %></p>
      <p>Bedrooms: <%= listing.bedroom_count %>
      <p>Bathrooms: <%= listing.bathroom_count %></p>
      <p>Per night: <%= listing.night_fee %></p>
      <p>Cleaning: <%= listing.cleaning_fee %>/w</p>
      <br>
      <% if listing.host_id == current_user.id %>
        <%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-danger' %>
        <%= link_to 'Messages', new_message_path(host_id: listing.host_id ), 
            class: 'btn btn-primary' if Conversation.where(host_id: listing.host_id) %>
      <% else %>
        <%= link_to 'Contact', new_message_path(host_id: listing.host_id ), class: 'btn btn-primary' %>
      <% end %>
    </div>
  <% end %>
  </div>
  <div class="col-md-4"></div>
</div>

